        {
        <div class="row mr-0 ml-0 ">
            <partial name="~/Views/Dashboard/SideNav.cshtml" />

            <div class="col-10 pr-0 pl-0">
                <main role="main" class="pb-3 mt-5">
                    @RenderBody()
                </main>
            </div>
        </div>
        }
        else
        {
        <main role="main" class="pb-3 my-mt-5">
            @RenderBody()
        </main>
        }*@
    <main role="main" class="">
        @RenderBody()
    </main>
    <footer class="border-top footer text-muted bg-light">
        <div class="container d-flex justify-content-center">
            &copy; 2020 - Kraujo-Bankas - <a asp-area="" asp-controller="Home" asp-action="ApieMus">&nbsp;Apie Mus</a>
            <a href="https://github.com/KlaipedaBreeze/KraujoBankas" target="_blank" class="footer-icon"><img src="~/visuals/icons/icons8-github.svg" alt="github icon"></a>
        </div>


    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script defer src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/login.js"></script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
