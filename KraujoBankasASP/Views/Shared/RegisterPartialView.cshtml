@model RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}

<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <img class="navbar-brand logo" src="~/visuals/icons/blood-bank.svg">
                <h2>Užsiregistruokite</h2>
                <button type="button" class="close ml-0" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-controller="DonorAccount" asp-action="Register"  method="post" class="registration-form">
                    <div class="form-group">
                        <input type="text" name="form-first-name" placeholder="Jūsų vardas..." class="form-first-name form-control" >
                    </div>
                    <div class="form-group">
                        <input type="text" name="form-last-name" placeholder="Jūsų pavardė..." class="form-last-name form-control" >
                    </div>
                    <div class="form-group">
                        <input asp-for="Email" type="text" placeholder="El. paštas..." class="form-email form-control" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" type="password" placeholder="Įrašykite slaptažodį" class="form-password form-control" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="ConfirmPassword" type="password" placeholder="Pakartokite slaptažodį" class="form-password form-control" required>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="text-center"><button type="submit" class="btn btn-outline-danger">Registruotis</button></div>
                </form>
            </div>
        </div>
    </div>
</div>
