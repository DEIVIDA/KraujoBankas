@model LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container my-mt-10">

    <div class="row justify-content-center">

        <div class="col-lg-7 mt-md-3">

            <div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <img class="navbar-brand logo" src="~/visuals/icons/blood-bank.svg">
                            <h2>Pakartokite prisijungimo duomenis:</h2>
                            <button type="button" class="close ml-0" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form id="account" asp-controller="Account" asp-action="Login" method="post">
                                <div class="form-group">
                                    <input asp-for="Email" placeholder="El. paštas..." class="form-email form-control" required="required" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Password" placeholder="Slaptažodis..." class="form-email form-control" required="required" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-outline-danger">Patvirtinti</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>

