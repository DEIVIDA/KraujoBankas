@model LoginViewModel

    <div class="container my-mt-10">
        <h2 class="display-4 text-center  mt-3 mb-4 text-black-90">@ViewData["Title"]</h2>


        <div class="row justify-content-center">


            <div class="col-lg-7 mt-md-3">
                <h5>Lorem Text1</h5>
                Blogas prisijungimas
            </div>

            <h2>Patikslinkite info</h2>
            <button type="button" class="close ml-0" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form method="post" class="registration-form">
                <div class="form-group">
                    <input asp-for="Email" placeholder="El. paštas..." class="form-email form-control" required="required" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" placeholder="Slaptažodis..." class="form-email form-control" required="required" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" asp-controller="Account" asp-action="Login"  class="btn btn-outline-danger">Prisijungti</button>
                </div>
            </form>
        </div>


    </div>
</div>